<odoo>

    <record model="ir.ui.view" id="wizard_add_medical_message_form_view">
        <field name="name">wizard.add.medical.message.form (in medical_careplan_medical)</field>
        <field name="model">wizard.add.medical.message</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="multi_step_wizard.multi_step_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//footer" position="before">
                <field name="message_text" required="1"/>
            </xpath>
            <button name="open_previous" position="after">
                <button name="add_message" attrs="{'invisible': [('state', '!=', 'final')]}"
                        string="Add Message"
                        class="btn-primary"
                        type="object"/>
            </button>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_add_medical_message_act_window">
        <field name="name">Wizard Add Medical Message</field>
        <field name="res_model">wizard.add.medical.message</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


</odoo>
