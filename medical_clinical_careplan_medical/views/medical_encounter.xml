<odoo>

    <record id="medical_encounter_view_form" model="ir.ui.view">
        <field name="name">medical.encounter.view.form</field>
        <field name="model">medical.encounter</field>
        <field name="inherit_id" ref="medical_administration_encounter.medical_encounter_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                        name="action_view_medical_careplans"
                        class="oe_stat_button"  icon="fa-hospital-o"
                        groups="medical_clinical_careplan.group_medical_careplan_list"
                        attrs="{'invisible': [('state','=','planned')]}">

                    <field name="medical_careplan_count" widget="statinfo"
                               string="Medical Careplans"/>
                    <field name="medical_careplan_ids" invisible="1"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
