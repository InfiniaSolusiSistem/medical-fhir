<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_backend"
              name="Backend Assets (used in backend interface)"
              inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript"
                    src="/medical_clinical_questionnaire/static/src/js/questionnaire_renderer.js"/>
            <script type="text/javascript"
                    src="/medical_clinical_questionnaire/static/src/js/questionnaire_view.js"/>
            <script type="text/javascript"
                    src="/medical_clinical_questionnaire/static/src/js/questionnaire_item.js"/>
            <link rel="stylesheet" type="text/scss"
                  href="/medical_clinical_questionnaire/static/src/scss/questionnaire_item.scss"/>
            <script type="text/javascript" src="/medical_clinical_questionnaire/static/src/js/medical_message_renderer.js"/>
        </xpath>
    </template>
    <template id="medical_procedure_messages_template">
        <div>
            <div><strong>Procedures:</strong></div>
            <ul>
                <li t-foreach="o.procedure_ids" t-as="procedure">
                    <span t-esc="procedure.display_name"/>
                </li>
            </ul>
        </div>
    </template>
</odoo>
